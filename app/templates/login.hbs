<form class="login" action="POST" {{action "login" on="submit"}}>
  {{#each errors.login}}
  <div class="login alert alert-danger">{{this}}</div>
  {{/each}}
  <div {{bind-attr class=":form-group errors.username:has-error"}}>
    {{input value=username class="username form-control" placeholder="Username"}}
    {{#each errors.username}}
    <div class="username error-message">{{this}}</div>
    {{/each}}
  </div>
  <div {{bind-attr class=":form-group errors.password:has-error"}}>
    {{input value=password type="password" class="password form-control" placeholder="Password"}}
    {{#each errors.password}}
    <div class="password error-message">{{this}}</div>
    {{/each}}
  </div>
  <div class="form-group">
    <input class="btn btn-primary submit" type="submit" value="Login"/>
  </div>
</form>
