<form class="room container form-horizontal" role="form">
    {{#unless location}}
    <div class="alert alert-warning">
        <strong>Warning:</strong> You need to pick a location in the world before saving.
    </div>
    {{/unless}}
    <div class="form-group">
        <label for="roomId" class="col-sm-2 control-label">Id</label > 
        <div class="col-sm-10"> 
            <p id="roomId" class="form-control-static">{{id}}</p>
        </div> 
    </div>
    <div class="form-group">
        <label for="roomTitle" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{input id="roomTitle" class="form-control" type="text" value=title }}
        </div>
    </div > 
    <div class="form-group">
        <label for="roomDescription" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            {{textarea id="roomDescription" class="form-control" rows=4 value=description}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button {{bind-attr disabled=isInvalid}} class="btn btn-primary" name="save" {{action 'save'}}>Save</button> 
            <button class="btn btn-link" name="cancel" {{action 'cancel'}}>Cancel</button>
        </div>
    </div>
</form >
