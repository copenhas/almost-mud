<form class="exit container form-horizontal" role="form">
    <div class="form-group">
        <label for="exitDirection" class="col-sm-2 control-label">Direction</label>
        <div class="col-sm-10"> 
            <p id="exitDirection" class="form-control-static">{{direction}}</p>
        </div>
    </div>
    <div class="form-group">
        <label for="exitFrom" class="col-sm-2 control-label">From</label>
        <div class="col-sm-10"> 
            <p id="exitFrom" class="form-control-static">{{direction}}</p>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button {{bind-attr disabled=isInvalid}} class="btn btn-primary" name="save" {{action 'save'}}>Save</button> 
            <button class="btn btn-link" name="cancel" {{action 'cancel'}}>Cancel</button>
        </div>
    </div>
</form>
